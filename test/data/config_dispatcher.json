{
  "input": {
    "data_structure": "test/data/config_data_structure.json",
    "input_type": "kafka",
    "options": {
      "server": "192.168.1.1",
      "port": 29092,
      "topic": "testtag01",
      "consumer_group": "data-consumer",
      "batchDuration": 10,
      "sep": ","
    }
  },
  "output": {
    "method": "stdout",
    "options": {
    }
  },
  "processing": {
    "transformation": [
      "packet_size",
      "traffic: mul(packet_size, sampling_rate)"
    ],
    "aggregations": {
      "operation_type": "reduce",
      "rule": [
        "min(packet_size)",
        "sum(traffic)"
      ]
    }
  },
  "analysis": {
    "historical": {
      "method": "mock",
      "options": {
        "deviation": 20
      }
    },
    "alert": {
      "method": "stdout",
      "option": {}
    },
    "time_delta": 20,
    "accuracy": 3,
    "rule": {
      "packet_size": 5,
      "traffic": 15
    }
  },
  "databases": {
    "country": "./GeoLite2/GeoLite2-Country.mmdb",
    "city": "./GeoLite2/GeoLite2-City.mmdb",
    "asn": "./GeoLite2/GeoLite2-ASN.mmdb"
  }
}
